        <script type="text/javascript">

        $("#autocomplete").autocomplete({
            source: [ '@Html.Raw(string.Join("', '", Program.GetNames()))' ]
        }
            );


        </script>
        <select id="select">
        @foreach (SailingWeb.Data.Boats boat in Program.Get
            <option value=" ">text</option>
        </select>>


        <div>BoatName: <input asp-for="Boats.boatName" /></div>

        <div>BoatNumber: <input asp-for="Boats.boatNumber" /></div>
        <input type="submit">

    </form>



</body>
</html>
